<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pressed_gray_item"
   >
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <CheckBox
        android:id="@+id/phone_speed_listview_item_check"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:button="@null"
        android:background="@drawable/checkbox_bg"
        android:layout_height="30dp" />
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/phone_speed_listview_item_img"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">
        <TextView
            android:gravity="bottom"
            android:textSize="15sp"
            android:textColor="#3c3c3c"
            android:id="@+id/phone_speed_listview_item_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:textSize="10sp"
            android:textColor="#3c3c3c"
            android:id="@+id/phone_speed_listview_item_space"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    <TextView
        android:gravity="bottom"
        android:textSize="10sp"
        android:textColor="#ec1414"
        android:id="@+id/phone_speed_listview_item_type"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>