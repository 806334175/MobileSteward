<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/activity_guidviewpager_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接跳过"
            android:textSize="15sp"
            android:visibility="invisible"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_weight="3"
        android:id="@+id/activity_guidviewpager_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/activity_guidviewpager_rl_first"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/activity_guidviewpager_iv_first"
                android:layout_margin="5dp"
                android:background="@mipmap/adware_style_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_guidviewpager_rl_second"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/activity_guidviewpager_iv_second"
                android:layout_margin="5dp"
                android:background="@mipmap/adware_style_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_guidviewpager_rl_third"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/activity_guidviewpager_iv_third"
                android:layout_margin="5dp"
                android:background="@mipmap/adware_style_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
